<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".fragments.SinopsisFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="5dp"
        android:background="#FFFDD0"
        app:cardBackgroundColor="@android:color/transparent"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/borde_card">


            <ImageView
                android:id="@+id/book_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="Portada del libro"
                android:scaleType="fitCenter"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANNA FRANK"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black" />

           <TextView
                android:id="@+id/book_synopsis_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinopsis:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- Descripción de la sinopsis -->
            <TextView
                android:id="@+id/book_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="4dp"
                android:text="El Diario de Ana Frank es el relato personal de una niña judía de 13 años que, junto con su familia y otras personas, se ocultó durante dos años en un anexo secreto de Ámsterdam para escapar de la persecución nazi durante la Segunda Guerra Mundial."
                android:textColor="@color/vino"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnvolversinopsis"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/vino"
                android:text="Volver"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>
