<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo principal con color y esquinas redondeadas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#d3c6a8"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Capa del borde con ajuste de inset -->
    <item android:insetLeft="1dp" android:insetRight="1dp" android:insetTop="1dp" android:insetBottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <stroke
                android:width="1dp"
                android:color="#808080"/>
        </shape>
    </item>
</layer-list>
