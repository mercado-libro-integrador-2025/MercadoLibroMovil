<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mercadolibromobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_foreground_f"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="false"
        android:theme="@style/Base.Theme.MercadoLibroMobile"
        tools:targetApi="31">
        <activity
            android:name=".activities.EditResenaActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddResenasActivity"
            android:exported="true"
            android:label="Agregar Reseña"></activity>
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddResenasActivity"
            android:exported="true"
            android:label="Agregar Reseña"></activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Base.Theme.MercadoLibroMobile" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Base.Theme.MercadoLibroMobile" />
        <activity
            android:name=".activities.Politicas"
            android:theme="@style/Base.Theme.MercadoLibroMobile" />
        <activity android:name=".activities.MisResenasActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>